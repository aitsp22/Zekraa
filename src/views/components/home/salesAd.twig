<style>
.scrolling-list {
    color: white;
    display: flex;
    gap: 2rem; /* Adjust the gap between list items as needed */
    animation: scroll 10s linear infinite; /* Adjust the duration (10s) as needed */
}

@keyframes scroll {
    from {
        transform: translateX(0);
    }
    to {
        transform: translateX(-50%); /* Adjust the value of translateX as needed */
    }
}
</style>
{% if component.show_sales_ads == true or component.show_sales_ads == 1 %}
<div class="z-[99999999999999999999999] fixed top-0 bg-black w-full h-[2rem]" id="ads">
  <div id="salesAd" class="relative flex justify-center items-center gap-3">
      <!-- Closing button -->
      <button id="closeButton" class="w-[1.5rem] h-full bg-black  absolute right-0 top-0 border-none cursor-pointer flex items-center justify-center z-[9999999999999]">
        <svg id="closeButton" xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="16" height="16" viewBox="0 0 50 50"
        style="fill:#000;border-radius:50%;cursor:pointer;" class="bg-white">
        <path
        fill="none" stroke="#000" stroke-width="2.5"
        transform="scale(0.8) translate(6.25,6.25)" d="M 7.71875 6.28125 L 6.28125 7.71875 L 23.5625 25 L 6.28125 42.28125 L 7.71875 43.71875 L 25 26.4375 L 42.28125 43.71875 L 43.71875 42.28125 L 26.4375 25 L 43.71875 7.71875 L 42.28125 6.28125 L 25 23.5625 Z"></path>
    </svg>
      </button>
      
      
      <ul class="scrolling-list">
            {% for ads in component.saleAds %}
            <!-- Duplicate list items for seamless scrolling -->
            <li><a href="{{link('offers')}}">{{ads.ad_text}}</a></li>
            
            {% endfor %}

            {% for ads in component.saleAds %}
            <!-- Duplicate the list items for continuous scrolling -->
             <li><a href="{{link('offers')}}">{{ads.ad_text}}</a></li>
            {% endfor %}
            
            {% for ads in component.saleAds %}
            <!-- Duplicate the list items for continuous scrolling -->
             <li><a href="{{link('offers')}}">{{ads.ad_text}}</a></li>
            {% endfor %}
           
    </ul>
  </div>
</div>
{% endif %}

<script>
// Execute the script when the DOM is fully loaded
document.addEventListener("DOMContentLoaded", function() {
    // Get the elements
    var salesAdContainer = document.getElementById("ads");
    var closeButton = document.getElementById("closeButton");

    // Function to close the sales ad
    function closeSalesAd() {
        console.log("closeSalesAd");
        salesAdContainer.style.display = "none";
    }

    // Add click event listener to close button
    if (closeButton) {
        closeButton.addEventListener("click", closeSalesAd);
    }
});


</script>