  document.addEventListener("DOMContentLoaded", function () {
    // Get the scroll-to-top SVG element
    var scrollToTopButton = document.getElementById("scrollToTop");
    var progressPath = document.getElementById("progressPath");

    // Add a scroll event listener
    window.addEventListener("scroll", function () {
        // Show or hide the scroll-to-top button based on scroll position
        if (window.scrollY >= 751) {
            scrollToTopButton.style.display = "block";
        } else {
            scrollToTopButton.style.display = "none";
        }

        // Calculate the scroll progress
        var scrollProgress = window.scrollY / (document.body.scrollHeight - window.innerHeight);
        
        // Calculate dash offset
        var dashOffset = progressPath.getTotalLength() * (1 - scrollProgress);
        
        // Set the stroke-dashoffset attribute based on scroll progress
        progressPath.setAttribute("stroke-dashoffset", dashOffset);
    });

    // Function to scroll to the top when the button is clicked
    function scrollToTop() {
        window.scrollTo({
            top: 0,
            behavior: "smooth",
        });
    }

    // Add click event listener to the scroll-to-top button (SVG)
    scrollToTopButton.addEventListener("click", scrollToTop);
});


</script>
