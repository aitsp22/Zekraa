<div id="scrollToTop" style="z-index: 99999999999;" onclick="scrollToTop()"
 class="bg-white cursor-pointer w-[3rem] h-[3rem] hover:scale-125 rounded-full fixed bottom-[5rem] 
 rtl:left-5 ltr:left-5 hidden justify-center hover:bg-black transition-all duration-500 ease-in-out
 items-center border-black hover:border-white border-2">
  <i class="icon sicon-arrow-up text-[#c37d48] text-xl"></i>
</div>
<footer class="bg-black text-white h-[10%]">
  <div aria-label="footer" style="border-bottom:1px dotted white" class="pb-[1rem] space-y-4">
    <div class="w-full lg:grid lg:grid-col-1 lg:grid-cols-12 gap-8 lg:gap-6 flex flex-col justify-center items-center">
      <div class="rtl:lg:pl-20 ltr:lg:pr-20 col-span-5 flex -flex-col items-center justify-center">
        <a href="{{ link('/') }}" class="flex items-center m-0">
          <img
            class="h-[10rem] w-[10rem]"
            src="{{ store.logo }}"
            alt="{{ store.name }}"
          />
        </a>
        {% if store.description %}
        <p class="max-w-sm leading-6 mb-6">
          {{ store.description | raw }}
        </p>
        {% endif %} {# vat #} {% if store.settings.tax.number %}
        <div class="flex rtl:space-x-reverse space-x-2 items-end">
          {% if store.settings.tax.certificate %}
          <a
            class="load-img-onclick"
            data-modal-id="modal-value-tax"
            href="#/"
            alt="{{ store.settings.tax.number }}"
          >
            <img
              width="100%"
              height="100%"
              src="{{ 'images/s-empty.png' | asset }}"
              data-src="{{ 'images/tax.png' | cdn }}"
              class="lazy w-10 rounded-sm hover:opacity-80 transition-opacity"
              alt="value added tax"
            />
          </a>
          {% endif %}
          <div>
            <p class="text-sm text-text-grey mb-1">
              {{ trans("common.elements.tax_number") }}
            </p>
            <b class="text-sm">{{ store.settings.tax.number }}</b>
          </div>
        </div>

        {% if store.settings.tax.certificate %}
        <salla-modal
          sub-title-first
          sub-title="{{ trans('common.elements.tax_number') }}"
          modal-title="{{ store.settings.tax.number }}"
          id="modal-value-tax"
        >
          <div class="flex justify-center max-w-full">
            <img
              class="w-full"
              loading="lazy"
              src="{{ 'images/s-empty.png' | asset }}"
              data-src="{{ store.settings.tax.certificate }}"
              alt="{{ store.settings.tax.number }}"
            />
          </div>
        </salla-modal>
        {% endif %} {% endif %}
      </div>

      <div class="col-span-2 flex flex-col justify-center items-center">
        {% component 'footer.menu' %}
      </div>

      <div class="col-span-5 flex flex-col items-center justify-center mb-6">
        {% component 'footer.contacts' %}
        <div class="lg:hidden contact-social">
          {% component 'footer.social' %}
        </div>
      </div>

      {# {% component 'footer.mobile-apps' %} #}
    </div>
  </div>

  <div class="flex justify-evenly items-center h-[4rem]">
    {# copy rights #}
    <div class="text-sm flex justify-center items-center" style="color: white !important;">
      <p>
        Copy Rights &copy; 2024 <a href="www.alrowadit.com">AlRowad (AITSP)</a>
      </p>
    </div>
    {# payment methods #}
    <div class="flex justify-center items-center">
      {% component 'footer.payment-methods' %}
    </div>
    {# links for social #}
    <div class="hidden lg:flex justify-center items-center">
      {% component 'footer.social' %}
    </div>
  </div>

  <span class="hidden bottom-2 rtl:pl-24 ltr:pr-24 md:grid-cols-3"></span>
</footer>

<script>
  // Get the button element
  var scrollToTopButton = document.getElementById('scrollToTop');
  function myFunction2() {
    let sus= document.getElementById('sus');
    console.log('lkak', sus);
  }

  // Add a scroll event listener
  window.addEventListener('scroll', function () {
    if (window.scrollY >= 751) {
      scrollToTopButton.style.display = 'flex';
    } else {
      scrollToTopButton.style.display = 'none';
    }
  });

  // Function to scroll to the top when the button is clicked
  function scrollToTop() {
    window.scrollTo({
      top: 0,
      duration: 5000,
      behavior: 'smooth'
    });
  }
</script>