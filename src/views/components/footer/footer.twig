<style>
/* Initial styling for the SVG */
#scrollToTop {
    background-color: black; /* Initial background color */
    border-radius: 50%; /* Make it circular */
    padding: -1rem; /* Add some padding */
    box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.2); /* Add some shadow */
}

/* Hover effect styling */
#scrollToTop:hover {
    background-color: white; /* Background color on hover */
}

#scrollToTop:hover #progressPath {
    stroke: black; /* Stroke color on hover */
}

#scrollToTop:hover #arrowPath {
    stroke: black; /* Stroke color on hover */
}

</style>
<!-- Circular SVG for scroll-to-top button and progress path -->
<svg
    id="scrollToTop"
    width="40"
    height="40"
    viewBox="0 0 40 40"
    style="position: fixed; bottom: 3rem; left: 1rem; z-index: 99999999999; cursor: pointer;"
    onclick="scrollToTop()"
>
    <!-- Circular progress path -->
    <circle
        id="progressPath"
        cx="20"
        cy="20"
        r="18"
        fill="none"
        stroke="#fff"
        stroke-width="3"
        stroke-linecap="round"
        stroke-dasharray="113.09733552923255"
        stroke-dashoffset="307.919"
        style="transition: stroke-dashoffset 10ms linear;"
    ></circle>

    <!-- Arrow up path -->
    <path
        id="arrowPath"
        d="M 12 24 l 8 -8 l 8 8"
        stroke="#fff"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        fill="none"
    ></path>
</svg>


