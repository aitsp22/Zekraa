{#
| Variable     | Type   | Description                                                        |
|--------------|--------|--------------------------------------------------------------------|
| links        | array  | List of active social links                                        |
| links[].name | string |                                                                    |
| links[].type | string | instagram, twitter, snapchat, tiktok, youtube, facebook, pinterest |
| links[].icon | string | Css class                                                          |
| links[].url  | string |                                                                    |
#}
<ul class="flex justify-center items-center lg:m-0">
  {% for link in links %}
    <li class="rtl:ml-2.5 ltr:mr-2.5 w-[2rem] h-[2rem] rounded-full bg-black flex justify-center items-center border-2 border-white">
      <a href="{{ link.url }}" rel="noopener" target="_blank" title="{{ link.name }}" aria-label="{{ link.name }}" class="social-link">
          <i class="sicon-{{ link.type }}"></i>
      </a>
    </li>
  {% endfor %}
</ul>
